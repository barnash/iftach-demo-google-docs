{
  "name": "realtime-collaborative-notes",
  "version": "1.0.0",
  "description": "Realtime collaborative notes app with Vue and WebSockets",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "tsx watch backend/src/server.ts",
    "dev:frontend": "vite frontend",
    "build": "tsc -p backend/tsconfig.json && vite build frontend",
    "build:backend": "tsc -p backend/tsconfig.json",
    "build:frontend": "vite build frontend"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "yjs": "^13.6.0",
    "y-websocket": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "ws": "^8.16.0"
  }
}
